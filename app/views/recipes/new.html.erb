<h1>レシピ作成</h1>
<%= form_with model: @recipe_category_material, url: recipes_path , local: true do |f| %>
 <%# レシピ画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        画像
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
  <div>
    <%= f.label :name, "料理名" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :url, "URL" %>
    <%= f.text_field :url %>
  </div>
  <div>
    <%= f.label :material, "メイン食材"%>
    <%= f.text_field :material%>
  </div>
 <div>
    <%= f.label :procedure, "作り方" %>
    <%= f.text_area :procedure %>
  </div>
  <div>
    <%= f.label :category, "カテゴリー" %>
    <%= f.select :category ,["メイン","サイド","汁物","丼","麺","デザート"]%>
  </div>
  <div>
    <%= f.submit "保存" %>
  </div>
<% end %>
